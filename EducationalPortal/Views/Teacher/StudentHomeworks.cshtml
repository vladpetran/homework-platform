@model IEnumerable<BusinessLayer.Models.StudentHomeworkViewModel>

@{
    ViewBag.Title = "StudentHomeworks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>StudentHomeworks</h2>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.StatusID)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Requirements)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.StatusID)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requirements)
            </td>

            <td>


                @if (item.StatusID == "Uploaded"||item.StatusID=="Commented" )
                {
                    <button>
                     @Html.ActionLink("View Details", "ViewDetails", "StudentHomeworks", new { studentId = item.StudentID, sHId = item.SHomeID },null)
                    </button>
                    
                                    
                 
                }
        </tr>
    }

</table>

